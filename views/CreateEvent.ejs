<!DOCTYPE html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=add_task" />
<html lang="en">
  <%- include('header') %>
<head>
 <title>Submission Form</title>
  <style>
  
  /* General Styles */
body {
  font-family: Arial, sans-serif;
  background-color: #f8f9fa;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}
.form-container {
  /* width: 90%; Make it responsive */
  /* max-width: 1200px; Prevent it from getting too wide */
  width: 100%;
  background: #ffffff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  margin-top: 60px;
  margin-left:260px;
  margin-right: 50px;
}

h2 {
  text-align: center;
  margin-bottom: 20px;
  color: #333;
}

/* Fieldset and Legend Styles */
fieldset {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
  background-color: #f9f9f9;
}

legend {
  font-size: 1.2em;
  font-weight: bold;
  color: #555;
  padding: 0 10px;
  text-transform: uppercase;
}

/* Form Group Styles */
.form-group {
  margin-bottom: 15px;
}

.form-group label {
  display: block;
  font-weight: bold;
  margin-bottom: 5px;
  color: #444;
}

.form-group input,
.form-group textarea,
.form-group select {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 1rem;
  background-color: #ffffff;
  transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  border-color: #007bff;
  outline: none;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
}

textarea {
  resize: none;
}

input[type="file"] {
  padding: 5px;
}

/* Button Styles */
button {
  display: block;
  width: 100%;
  padding: 10px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

button:hover {
  background-color: #0056b3;
  transform: scale(1.02);
}

/* Responsive Design */
@media (max-width: 600px) {
  .form-container {
    padding: 15px;
  }

  legend {
    font-size: 1em;
  }

  button {
    font-size: 0.9rem;
    padding: 8px;
  }
}
  </style>
</head>
<body>

<!-- <div class="main-content"> -->
<div class="form-container">
    <h2>Create President's Ambassadors Event</h2>
  
    <form id="eventForm" method="POST" action="/events">
      <!-- Event Details Section -->
      <fieldset class="form-group">
        <legend>Event Details</legend>
        <div class="form-group">
          <label for="EventName">Event Name</label>
          <input type="text" id="EventName" name="EventName" required>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input type="text" id="Location" name="Location" placeholder="Enter location" required>
        </div>
        <div class="form-group">
          <label for="attire">Attire</label>
          <input type="text" id="Attire" name="Attire" placeholder="Enter attire details" required>
        </div>
      </fieldset>
  
      <!-- Schedule Section -->
      <fieldset class="form-group">
        <legend>Schedule</legend>
        <div class="form-group">
          <label for="report-time">Report Time</label>
          <input type="datetime-local" id="DateReportTime" name="DateReportTime" required>
        </div>
        <div class="form-group">
          <label for="start-time">Start Time</label>
          <input type="datetime-local" id="DateStart" name="DateStart" required>
        </div>
        <div class="form-group">
          <label for="end-time">End Time</label>
          <input type="datetime-local" id="DateEnd" name="DateEnd" required>
        </div>
        <div class="form-group">
          <label for="plus-minus-time">+/- Time</label>
          <input type="number" id="AdjustedTime" name="AdjustedTime" placeholder="Enter time adjustment" required>
        </div>
        <div class="form-group">
          <label for="plus-minus-time">Live time: </label>
          <input type="datetime-local" id="LiveTime" name="LiveTime" required>
        </div>
      </fieldset>
  
      <!-- Contact Information Section -->
      <fieldset class="form-group">
        <legend>Point of Contact</legend>
        <div class="form-group">
          <label for="contact-name">Name</label>
          <input type="text" id="PACoordinatorName" name="PACoordinatorName" placeholder="Enter name" required>
        </div>
        <div class="form-group">
          <label for="contact-office">Office</label>
          <input type="text" id="PACoordinatorOffice" name="PACoordinatorOffice" placeholder="Enter office details" required>
        </div>
        <div class="form-group">
          <label for="contact-title">Title</label>
          <input type="text" id="PACoordinatorTitle" name="PACoordinatorTitle" placeholder="Enter title" required>
        </div>
      </fieldset>
  
      <!-- Other Details Section -->
      <fieldset class="form-group">
        <legend>Additional Information</legend>
        <div class="form-group">
          <label for="credit-hours">Credit Hours</label>
          <input type="number" id="NumOfHours" name="NumOfHours" required>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="Description" name="Description" rows="4" placeholder="Enter description" required></textarea>
        </div>
        <div class="form-group">
          <label for="number-of-spots">Number of Spots</label>
          <input type="number" id="NumOfPAs" name="NumOfPAs" min="1" required>
        </div>
        <!-- <div class="form-group">
          <label for="BackUp">Number of Backup PAs (Optional)</label>
          <input type="number" id="BackUp" name="BackUp" min="0">
        </div> -->
      
        <!-- Do you want roles? -->
        <div class="form-group">
          <label for="enableRoles">Do you want roles?</label>
          <select id="enableRoles" name="enableRoles">
            <option value="no">No</option>
            <option value="yes">Yes</option>
          </select>
        </div>
      
        <!-- Role inputs -->
        <div id="rolesSection" style="display: none; margin-top: 10px;">
          <label>How many PAs are taking these roles?</label><br>
          <label for="golfCartDriver">Golf Cart Driver:</label>
          <input type="number" id="golfCartDriver" name="Roles[golfCartDriver]" min="0" value="0"><br>
      
          <label for="leadPA">Lead PA:</label>
          <input type="number" id="leadPA" name="Roles[leadPA]" min="0" value="0"><br>
      
          <label for="senior">Senior:</label>
          <input type="number" id="senior" name="Roles[senior]" min="0" value="0"><br>
      
          <label for="junior">Junior:</label>
          <input type="number" id="junior" name="Roles[junior]" min="0" value="0"><br>
      
          <label for="Sophomore">Sophomore:</label>
          <input type="number" id="Sophomore" name="Roles[Sophomore]" min="0" value="0"><br>
        </div>
        <br><br>
      
        <button type="submit">Create Event</button>
      </form>
      
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          const enableRoles = document.getElementById('enableRoles');
          const rolesSection = document.getElementById('rolesSection');
          const form = document.getElementById('eventForm');
      
          enableRoles.addEventListener('change', () => {
            rolesSection.style.display = enableRoles.value === 'yes' ? 'block' : 'none';
          });
      
          form.addEventListener('submit', (e) => {
            const totalSpots = parseInt(document.getElementById('NumOfPAs').value) || 0;
      
            if (enableRoles.value === 'yes') {
              const totalRoles = 
                parseInt(document.getElementById('golfCartDriver').value) +
                parseInt(document.getElementById('leadPA').value) +
                parseInt(document.getElementById('senior').value) +
                parseInt(document.getElementById('junior').value) +
                parseInt(document.getElementById('Sophomore').value);
      
              if (totalRoles > totalSpots) {
                e.preventDefault();
                alert('The total number of role assignments cannot exceed the number of PA spots.');
              }
            }
          });
        });
      </script>
      <!-- Submit Button -->
  </div>
</body>
</html>