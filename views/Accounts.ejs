<!DOCTYPE html>
<%- include('header') %>
<!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"> -->
<html>
<head>
    <style>
        .table{
            width: 80%;
        }
        .btn-container{
            display: flex;
            justify-content: space-around;
        }
        .NewUser-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px; /* Space between icon and text */
    padding: 10px 15px;
    background-color: #28a745; /* Bootstrap success green */
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.2s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .NewUser-btn:hover {
    background-color: #218838; /* Slightly darker green */
    transform: scale(1.05);
  }

  .NewUser-btn i {
    font-size: 24px;
  }

</style>
    </style>
</head>
<body>
<div class="main-content">
    <h1>Edit Accounts</h1>
    <br>
    <div class="btn-container">
        <a href='/NewUser' class="NewUser-btn">
            <i class="material-icons">person_add</i>
            Create New User
        </a>
    </div>
    <h2>Admin Accounts:</h2>
    <table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% usersAdmin.forEach(userAdmin => { %> 
            <tr>
                <td><%= userAdmin.fName %></td>
                <td><%= userAdmin.lName %></td>
                <td><%= userAdmin.Email %></td>
                <td>
                    <div class="btn-container">
                        <a href='/editUser/<%= userAdmin._id %>' class="edit-btn">
                            <i class="material-icons">edit</i>
                        </a>
                        <a href='/MoreInfo/<%= userAdmin._id %>' class="info-btn">
                            <i class="material-icons">info</i>
                        </a>
        
                        <a href='/deleteUser/<%= userAdmin._id %>' class="delete-btn">
                            <i class="material-icons">delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        <% }) %> 
    </tbody>
</table>
    <br>
    <h2>PA Accounts:</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Graduation Year</th>
                <th>Graduation Semester</th>
                <!-- <th><a href="/?sort=name&order== sortField === 'name' && sortOrder === 1 ? 'desc' : 'asc' %>">Name</a></th> -->
                <th>Email</th>
                <th>Actions</th>
                <!-- <th><a href="/?sort=role&order== sortField === 'role' && sortOrder === 1 ? 'desc' : 'asc' %>">Role</a></th> -->
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.fName %></td>
                    <td><%= user.lName %></td>
                    <td><%= user.GraduationSemester %></td>
                    <td><%= user.GraduationYear %></td>
                    <td><%= user.Email %></td>
                    <td>
                        <div class="btn-container">
                            <a href='/editUser/<%= user._id %>' class="edit-btn">
                                <i class="material-icons">edit</i>
                            </a>
                            <a href='/MoreInfo/<%= user._id %>' class="info-btn">
                                <i class="material-icons">info</i>
                            </a>
            
                            <a href='/deleteUser/<%= user._id %>' class="delete-btn">
                                <i class="material-icons">delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
    <!-- User List -->
    <div class="user-list" id="userList">
        <!-- Dynamic user cards will be appended here -->
    </div>
</div>


</body>
</html>
