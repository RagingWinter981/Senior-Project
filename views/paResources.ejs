    <style>
        /* General Styling */
        h1 {
            /* margin-top: //20px; */
            color: #333;
            text-align: center;
            background-color: #ffffff;
            padding: 1%;
        }
        .header {
            position: sticky;
            top: 0;
            padding: 10px 16px;
            padding-left: 17%;
            background: #555;
            color: #f1f1f1;
        }
        .headerfont {
            color: #333;
            text-align: left;
            background-color: #ffffff;
            font-size: 30px;
            font-weight: bold;
        }
        .main {
            margin-left: 160px; /* Same as the width of the sidenav */
            font-size: 28px; /* Increased text to enable scrolling */
            padding: 0px 10px;
            display: flex;
            margin-top: 20px;
        }

        /* Card container styling */
        .card-container {
            display: flex;
            gap: 20px;
            margin-left: 17%;
            padding-right: 10%;
            padding-top:2%;
            /* align-content: right; */

        }

        .card {
            background-color: #fff;
            border-radius: 8px;
            border-style: solid;
            border-color: #807e7e;
            box-shadow: 10px 4px 8px rgba(0.2, 0.2, 0.2, 0.2);
            width: 95%;
            padding: 20px;
            text-align: left;
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-10px);
        }

        .card h2 {
            color: #000000;
        }

        .card p {
            color: #000000;
            font-size: 14px;
        }

        /* Add media queries for smaller screens */
        @media screen and (max-width:720px) {
            .main-content {
                flex-direction: column;
                align-items: center;
            }
            .card-container {
                flex-direction: column;
                align-items: center;
            }

            .card {
                width: 80%;
            }
        }
    </style>
</head>
