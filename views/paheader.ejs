  .main-content {
  margin-top: 60px;
  margin-left: 80px;
}

  @media only screen and (max-width: 600px){
    .sidenav{
      width: 50px;
    }
    .main-content {
    margin-left: 60px; /* Adjusts for smaller sidebar width */
   }
    .nav-links li a p{
      display: none;
    }
    .nav-links li a{
      margin-right:0;
    }
    nav-links li a{
      justify-content: center;
    }

  }
  .profile-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #0056b3;  /* Blue background or you can set any color */
    color: white;
    font-size: 20px;
    font-weight: bold;
}
  .initials {
    letter-spacing: -2px; /* Adjust this value to make the letters closer */
    font-size: 24px; /* Adjust the size */
    font-weight: normal;
  }
  </style>
