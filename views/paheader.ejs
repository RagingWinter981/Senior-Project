  .nav-links li:nth-child(5):hover ~  .active{
    top: 51.5%;
  }
  .nav-links li:nth-child(6):hover ~  .active{
    top: 64%;
  }
  .nav-links li:nth-child(7):hover ~  .active{
    top: 76.5%;
  }
  .nav-links li:nth-child(8):hover ~  .active{
    top: 89%;
  }

  .main-content {
  margin-top: 70px;
  margin-left: 260px;
}
