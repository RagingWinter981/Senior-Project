  <header>
    <div class="navbar">
      <a href="/Logout" class="btn-outline-danger">Log Out</a>
    </div>
      <div class="sidenav">
        <img src="/images/StMarysUniversity.png" style="width:50px;height:50px;" class="logo-icon">
        <a class="logo">
          <img src="/images/PresidentAmbassadors.jpg" style="width:150px;height:150px;border-radius:6px;display:flex;justify-content:center; align-items: center;">
        </a>
        <ul class="nav-links">
          <li><a href="/paHome"><span class="material-icons"> home </span>Home</a></li>
          <li><a href="/paAddEvents"><span class="material-icons">event</span>Add Events</a></li>
          <li><a href="/paCheckHours"><span class="material-icons">verified</span>Check Hours</a></li>
          <li><a href="/paResources"><span class="material-icons">info</span>Resources</a></li>
          <div class="active"></div>
        </ul>
      </div>
  </header>